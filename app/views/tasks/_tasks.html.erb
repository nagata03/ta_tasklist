<% if tasks.any? %>
  <table class="table table-striped">
    <thread>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
        <th>削除</th>
      </tr>
    </thread>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
          <td>
            <% if current_user == task.user %>
              <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </td>
        </tr>
      <% end %>
   </tbody>
  </table>
  <div>
    <%= paginate tasks %>
  </div>
<% end %>
